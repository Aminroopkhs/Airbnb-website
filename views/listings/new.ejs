<%layout("/layouts/boilerplate.ejs")%>
    <h2>Create new listing</h2>
    <br> <br>
    <div class="row">
        <div class="col-8 offset-2">
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input required class="form-control" type="text" placeholder="enter the title" name="listing[title]"> 
            <div class="valid-feedback">
                Title looks good!
            </div>
            <div class="invalid-feedback">
                please enter a title
            </div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">description</lable>
            <textarea required class="form-control" name="listing[description]"></textarea>
            <div class="valid-feedback">
                description looks good!
            </div>
            <div class="invalid-feedback">
                please enter the description
            </div>
        </div>

        <div class="mb-3">
            <lable for="image" class="form-label">Image Link</lable>
            <input class="form-control" placeholder="enter the image URL/link" name="listing[image]"> 
        </div>

        <div class="mb-3">
            <lable for="price" class="form-label">price</lable>
            <input required class="form-control" placeholder="enter the price" name="listing[price]">
            <div class="valid-feedback">
                price looks good!
            </div>
            <div class="invalid-feedback">
                please enter the price
            </div> 
        </div>

        <div class="mb-3">
            <lable for="location" class="form-label">location</lable>
            <input required type="text" class="form-control" placeholder="enter the location" name="listing[location]">
            <div class="valid-feedback">
                location looks good!
            </div>
            <div class="invalid-feedback">
                please enter the location
            </div> 
        </div>

        <div class="mb-3">
            <lable for="country" class="form-label">country</lable>
            <input required type="text" class="form-control" placeholder="enter the country" name="listing[country]">
            <div class="valid-feedback">
                country looks good!
            </div>
            <div class="invalid-feedback">
                please enter the country
            </div> 
        </div>

        <button class="btn btn-dark add-btn">ADD</button>
        <br><br>
    </form> </div> </div>
