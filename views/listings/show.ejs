<%- layout("./layouts/boilerplate.ejs")%>
    <!-- <h3 class="offset-3">Listing details</h3> -->
    <div class="row">
    <div class="col-8 offset-2">
    <div class="card col-6 offset-2">
        <h3 class="mb-3">Listing details</h3>
            <img src="<%=listing.image.url%>" class="card-img-top show-img mb-3" alt="listing_img">
            <div class="card-body">
                <p class="card-text mb-3">
                   <b> <%= listing.title %> </b> <br>
                   <%= listing.description %> <br>
                   &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
                   <%= listing.location %><br>
                   <%= listing.country %>
                </p>
            </div>
            <div class="btns">
            <a class="btn add-btn mb-3" href="/listings/<%=listing._id%>/edit">Edit</a>
            <form method="POST" action="/listings/:<%=listing._id%>?_method=DELETE">
            <button class="btn add-btn mb-3 ">Delete</button></form> <br>
            </div>
    </div>
     </div>
    </div>