<%layout("/layouts/boilerplate.ejs")%>
    <h2 class="mt-3">Edit your listing</h2>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input required class="form-control" type="text" name="listing[title]" value="<%=listing.title%>"> 
            <div class="valid-feedback">
                Title looks good!
            </div>
            <div class="invalid-feedback">
                please enter a title
            </div>
        </div>
        <div class="mb-3">
             <lable for="description" class="form-label">description</lable>
            <textarea required  class="form-control" name="listing[description]"><%=listing.description%> </textarea>
            <div class="valid-feedback">
                description looks good!
            </div>
            <div class="invalid-feedback">
                please enter a short description
            </div>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-label">Image Link</lable>
            <input required value="<%=listing.image.url%>" class="form-control" placeholder="enter the image URL/link" name="listing[image.url]"> 
        </div>
        <div class="mb-3">
            <lable for="price" class="form-label">price</lable>
            <input required  value="<%=listing.price%>" class="form-control" type="number" placeholder="enter the price" name="listing[price]">  
            <div class="valid-feedback">
                price looks good!
            </div>
            <div class="invalid-feedback">
                please enter a valid price
            </div>
        </div>
        <div class="mb-3">
            <lable for="location" class="form-label">location</lable>
            <input  required value="<%=listing.location%>"  type="text" class="form-control" placeholder="enter the location" name="listing[location]"> 
            <div class="valid-feedback">
                location looks good!
            </div>
            <div class="invalid-feedback">
                please enter a valid location
            </div>
        </div>
        <div class="mb-3">
             <lable for="country" class="form-label">country</lable>
            <input required  value="<%=listing.country%>" type="text" class="form-control" placeholder="enter the country" name="listing[country]">
            <div class="valid-feedback">
                country looks good!
            </div>
            <div class="invalid-feedback">
                please enter a valid country name
            </div> 
        </div>
        <button class="btn btn-dark add-btn mt-3 mb-3">Edit</button>
        <!-- <br><br> -->
    </form> </div></div>